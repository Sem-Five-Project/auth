# Environment variables template - Copy to .env.docker and fill in actual values
# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://your-db-host:5432/your-database
SPRING_DATASOURCE_USERNAME=your-db-username
SPRING_DATASOURCE_PASSWORD=your-db-password

# PayHere Configuration
PAYHERE_MERCHANT_ID=your-payhere-merchant-id
PAYHERE_MERCHANT_SECRET=your-payhere-merchant-secret
PAYHERE_NOTIFY_URL=https://your-app-url/api/payments/callback
PAYHERE_RETURN_URL=https://your-frontend-url/success
PAYHERE_CANCEL_URL=https://your-frontend-url/cancel

# SendGrid Email API
SENDGRID_API_KEY=your-sendgrid-api-key-here
DEFAULT_FROM_EMAIL=your-email@domain.com

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRATION=900000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,http://localhost:3000

# Spring Profile
SPRING_PROFILES_ACTIVE=production

# DigitalOcean Registry (for CI/CD)
DIGITALOCEAN_ACCESS_TOKEN=your-do-access-token
DO_REGISTRY_NAME=your-registry-name
